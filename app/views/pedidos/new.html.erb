<%= simple_form_for [@pedido] do |f| %>

        <%= f.input :nome_falecido, label: false, placeholder: "Nome do Falecido" %>

        <%= f.input :faixa, label: false, placeholder: "Frase para a faixa da coroa" %>

        <%= f.collection_select :velorio_id, @velorios, :id, :nome, { include_blank: 'Selecione o velÃ³rio' } %>

        <%= f.input :data_velorio, order: [:day, :month, :year], use_month_numbers: true, start_year: Time.now.year, end_year: Time.now.year + 1, label: "Data" %>

        <%= f.text_field :coroa_id, label: "Coroa", value: @coroa.id %>

        <%= f.submit 'Ir para pagamento', class: 'btn btn-primary' %>

      <% end %>
